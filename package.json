{
  "name": "easycall",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "start": "pm2 start ./bin/www -i 3 --watch",
    "dev": "nodemon --ext *  js,html,ejs,css,scss ./bin/www",
    "ncu": "npm install -g npm-check-updates",
    "update-modules": "ncu -u && npm install",
    "pm2-update": "npm install pm2@latest -g"
  },
  "dependencies": {
    "cookie-parser": "~1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.4",
    "ejs": "^3.1.9",
    "express": "~4.18.2",
    "http-errors": "~2.0.0",
    "mongoose": "^7.2.4",
    "morgan": "~1.10.0",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3"
  }
}
